<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="tag_color">?colorPrimaryDark</item>
        <item name="namespace_color">@color/colorAccent</item>
        <item name="cardBackgroundColor">#ff424242</item>
        <item name="progress_color">@color/colorPrimary</item>
        <item name="select_color">@color/colorPrimary</item>
        <item name="category_remove_color">@color/category_remove_color</item>
        <item name="category_add_color">@color/category_add_color</item>
        <item name="category_add_back_color">?colorButtonNormal</item>
        <item name="bottomSheetDialogTheme">@style/ReaderSettingsDialog</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="fullscreen_theme">@style/FullscreenTheme</item>
        <item name="borderlessButtonStyle">@style/AppTheme.BorderlessButton</item>
        <item name="actionBarBackgroundColor">?colorPrimary</item>
        <item name="archive_color_label">@color/archive_cover_label</item>
    </style>

    <style name="AppTheme.BorderlessButton" parent="Widget.AppCompat.Button.Borderless.Colored" />

    <style name="AppTheme.Black" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="colorPrimary">#000000</item>
        <item name="colorBackgroundFloating">#000000</item>
        <item name="tag_color">@color/dark_gray</item>
        <item name="cardBackgroundColor">#000000</item>
        <item name="bottomSheetDialogTheme">@style/ReaderSettingsDialog.Black</item>
    </style>

    <style name="AppTheme.White" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">#9E9E9E</item>
        <item name="colorPrimaryDark">#616161</item>
        <item name="colorSurface">?colorPrimary</item>
        <item name="colorAccent">?colorPrimaryDark</item>
        <item name="android:textColorLink">@android:color/white</item>
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="tag_color">@color/black</item>
        <item name="archive_color_label">@color/archive_cover_label_light</item>
        <item name="namespace_color">@android:color/darker_gray</item>
        <item name="cardBackgroundColor">#F5F5F5</item>
        <item name="progress_color">@color/category_remove_color</item>
        <item name="select_color">@color/category_remove_color</item>
        <item name="category_remove_color">@color/category_remove_color</item>
        <item name="category_add_color">@color/category_add_color</item>
        <item name="category_add_back_color">?colorPrimaryDark</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="fullscreen_theme">@style/FullscreenTheme</item>
        <item name="borderlessButtonStyle">@style/AppTheme.BorderlessButton</item>
        <item name="actionBarBackgroundColor">?colorPrimary</item>
        <item name="bottomSheetDialogTheme">@style/ReaderSettingsDialog.White</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="ReaderSettingsDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog"/>

    <style name="ReaderSettingsDialog.Black" parent="ReaderSettingsDialog">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="ReaderSettingsDialog.White" parent="ReaderSettingsDialog">
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:background">#000000</item>
    </style>

    <style name="SettingsTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="SettingsTheme.Black" parent="AppTheme.Black">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="SettingsTheme.White" parent="AppTheme.White">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
