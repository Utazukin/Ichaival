<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="tag_color">?colorPrimaryDark</item>
        <item name="cardBackgroundColor">#ff424242</item>
    </style>

    <style name="AppTheme.Black" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:colorBackground">#000000</item>
        <item name="colorPrimary">#000000</item>
        <item name="colorBackgroundFloating">#000000</item>
        <item name="tag_color">@color/dark_gray</item>
        <item name="cardBackgroundColor">#000000</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="ReaderSettingsDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog"/>

    <style name="FullscreenActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:background">#000000</item>
    </style>

    <style name="SettingsTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="SettingsTheme.Black" parent="AppTheme.Black">
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
